<body>
  <main>
    <h2>User Login with MetaMask</h2>
    <button id="loginBtn">Connect MetaMask</button>
    <p id="message"></p>
    <p><a href="index.html">Back to homepage</a></p>
  </main>

  <script>
    const loginBtn = document.getElementById('loginBtn');
    const message = document.getElementById('message');

    loginBtn.onclick = async () => {
      message.style.color = 'black';
      message.textContent = 'Checking MetaMask...';

      if (!window.ethereum) {
        message.style.color = 'red';
        message.textContent = 'MetaMask is not installed. Please install it to continue.';
        return;
      }

      try {
        // Request account access
        const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
        const wallet = accounts[0];
        sessionStorage.setItem('wallet', wallet);

        message.style.color = 'green';
        message.textContent = `Connected wallet: ${wallet}`;
        setTimeout(() => {
          window.location.href = 'user-dashboard.html';
        }, 1500);
      } catch (err) {
        message.style.color = 'red';
        message.textContent = 'MetaMask login denied or failed.';
      }
    };
  </script>
</body>
</html>
