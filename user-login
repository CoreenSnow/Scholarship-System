    }
    main {
      background: white;
      padding: 2rem 3rem;
      border-radius: 10px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      max-width: 400px;
      width: 90vw;
      text-align: center;
    }
    h2 {
      margin-bottom: 1.5rem;
      color: #333;
    }
    button {
      background: #28a745;
      border: none;
      color: white;
      padding: 0.8rem 2rem;
      font-size: 1.2rem;
      border-radius: 6px;
      cursor: pointer;
      box-shadow: 0 4px 8px rgb(40 167 69 / 0.3);
      transition: background-color 0.3s ease;
    }
    button:hover {
      background: #19692c;
    }
    #message {
      margin-top: 1rem;
      font-weight: 600;
      min-height: 1.2em;
    }
  </style>
